@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<div class="d-flex flex-column min-vh-100">
    <header class="navbar navbar-expand navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="/">Security Audit</a>
            <div class="ms-auto">
                <AuthorizeView>
                    <Authorized>
                        <span class="text-white me-3">@context.User.Identity?.Name</span>
                        <a class="nav-link d-inline-block text-white" href="/Account/OktaSignOut">Sign out</a>
                    </Authorized>
                    <NotAuthorized>
                        <a class="nav-link d-inline-block text-white" href="/Account/OktaSignIn">Sign in</a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </header>

    <div class="d-flex flex-grow-1">
        <nav class="nav flex-column bg-dark text-light vh-100 p-3" style="width:220px">
            <h5 class="text-white mb-4">Menu</h5>
            <NavLink class="nav-link text-light" href="/" Match="NavLinkMatch.All">Home</NavLink>
            <NavLink class="nav-link text-light" href="/audit">Security Audit</NavLink>
            <NavLink class="nav-link text-light" href="/roles/assign">Role Assignment</NavLink>
        </nav>

        <main class="flex-grow-1 p-4">
            @Body
        </main>
    </div>
</div>
